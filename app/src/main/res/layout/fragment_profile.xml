<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user_profile.ProfileFragment"




    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:src="@drawable/baseline_user_24"

            />

        <TextView
            android:id="@+id/txt_profile_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="10sp"


            />

<!--        implement button danger
            for delete last week entries
 -->
        <Button
            android:id="@+id/btn_profile_delete_last_week_entries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Last Week Entries"
            android:textSize="18sp"
            android:layout_marginVertical="45dp"
            android:paddingHorizontal="18dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/white"
            android:theme="@style/Widget.Material3.Button.TextButton"
            app:backgroundTint="@color/red"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/red"
            android:visibility="gone"
            android:id="@+id/txt_profile_deleteMsg"
            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:id="@+id/ll_profile_delete_last_week_entries_buttons"
            android:visibility="gone"
            >
            <Button
                android:id="@+id/btn_profile_delete_last_week_entries_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="18sp"
                android:layout_marginVertical="45dp"
                android:paddingHorizontal="18dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textColor="@color/white"
                android:theme="@style/Widget.Material3.Button.TextButton"
                app:backgroundTint="@color/navy"
                android:layout_marginHorizontal="6dp"

                />
            <Button
                android:id="@+id/btn_profile_delete_last_week_entries_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textSize="18sp"
                android:layout_marginVertical="45dp"
                android:paddingHorizontal="18dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textColor="@color/white"
                android:theme="@style/Widget.Material3.Button.TextButton"
                app:backgroundTint="@color/red"
                android:layout_marginHorizontal="6dp"

                />

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>