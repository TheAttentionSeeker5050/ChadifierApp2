<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    android:layout_marginVertical="10dp"
    android:id="@+id/lo_recorded_task_item__root"

    >


<!--    the max limit of characters in this text view should be 35
        followed by ... if necessary -->
    <TextView
        android:id="@+id/txt_recorded_task_item__name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:text="List item List item List item List item List item List item List item List item List item List item List item List item List item List item List item List item List item List item List item List item List item List item"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:lines="2"
        android:ellipsize="end"
        app:layout_constraintBottom_toTopOf="@+id/txt_recorded_task_item__subtext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_recorded_task_item__edit"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/txt_recorded_task_item__subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="155 points - 1/1/2020"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginBottom="10dp"


        app:layout_constraintBottom_toBottomOf="@+id/bottom_border"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageButton
        android:id="@+id/btn_recorded_task_item__edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_edit_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_recorded_task_item__delete"

        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_recorded_task_item__delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_delete_24"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />


    <View
        android:id="@+id/bottom_border"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />



</androidx.constraintlayout.widget.ConstraintLayout>